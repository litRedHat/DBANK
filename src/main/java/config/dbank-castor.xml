	<bean id="chipMessageEngine" name="chipMessageEngine"
		class="com.tangdi.dbank.base.XMLMessageEngine">
		<property name="requestXMLContexts">
			<map>
				<entry key="7021" value-ref="Request_7021" />
			</map>
		</property>
		<property name="responseXMLContexts">
			<map>
				<entry key="7021" value-ref="Response_7021" />
			</map>
		</property>
		<property name="properties">
			<map>
				<entry key="encoding" value="gbk"></entry>
				<entry key="hasLength" value="true"></entry>
				<entry key="msgBodyLength" value="8"></entry>
			</map>
		</property>
	</bean>
	<!-- 发送短信请求 -->
	<bean id="Request_7021" class="org.castor.spring.xml.XMLContextFactoryBean">
		<property name="mappingLocations">
			<list>
				<value>config/mapping/castor/chip/req/req_7021.xml</value>
			</list>
		</property>
	</bean>
	<!-- 发送短信请求 -->
	<bean id="Response_7021" class="org.castor.spring.xml.XMLContextFactoryBean">
		<property name="mappingLocations">
			<list>
				<value>config/mapping/castor/chip/res/res_7021.xml</value>
			</list>
		</property>
	</bean>
</beans>